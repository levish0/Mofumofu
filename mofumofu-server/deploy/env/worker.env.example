# ── Environment ──────────────────────────────────────────
RUST_LOG=info

# ── Database (Write only) ───────────────────────────────
POSTGRES_WRITE_HOST=postgres
POSTGRES_WRITE_PORT=5432
POSTGRES_WRITE_NAME=mofumofu
POSTGRES_WRITE_USER=mofumofu
POSTGRES_WRITE_PASSWORD=
POSTGRES_WRITE_MAX_CONNECTION=10
POSTGRES_WRITE_MIN_CONNECTION=2

# ── Redis Cache ─────────────────────────────────────────
REDIS_CACHE_HOST=redis-cache
REDIS_CACHE_PORT=6380

# ── NATS ────────────────────────────────────────────────
NATS_URL=nats://nats:4222

# ── MeiliSearch ─────────────────────────────────────────
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_API_KEY=

# ── SMTP ────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=Mofumofu

# ── Frontend ────────────────────────────────────────────
FRONTEND_HOST=https://example.com
PROJECT_NAME=mofumofu
FRONTEND_PATH_VERIFY_EMAIL=/verify-email
FRONTEND_PATH_RESET_PASSWORD=/reset-password
FRONTEND_PATH_CONFIRM_EMAIL_CHANGE=/confirm-email-change

# ── Cloudflare R2 ──────────────────────────────────────
R2_ENDPOINT=
R2_REGION=auto
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_DOMAIN=

# ── Cron ────────────────────────────────────────────────
CRON_TIMEZONE=Asia/Seoul
